{% extends 'factureLayout.html.twig' %}

{% block title %}Hello FactureController!{% endblock %}


{% block body %}

    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th scope="col">Nom</th>
                <th scope="col">Designation</th>
                <th scope="col">Montant</th>
                <th scope="col">afficher</th>
            </tr>
        </thead>
        {% for facture in factures %}
        <tr {% if loop.index is divisible by(2) %} class="table-active" {% else %} class="table-secondary" {% endif %}>
            <td>{{ facture.nom}} </td>
            <td>{{ facture.designation}} </td>
            <td>{{ facture.montant}} </td>
            <td><a class="btn btn-primary btn-sm" href="{{path('facture', {'id': facture.id})}} ">afficher</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
